<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".7">
        <TextView
            android:id="@+id/textTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/audio_text_margin"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="some text"
            android:textColor="@color/track_name_text_color"
            android:textSize="@dimen/track_name_text_size"/>

        <TextView
            android:id="@+id/textArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTrackName"
            android:layout_marginLeft="@dimen/audio_text_margin"
            android:text="some text"
            android:textColor="@color/artist_name_text_color"
            android:textSize="@dimen/artist_name_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/time_box_right_margin"
        android:layout_marginTop="@dimen/time_box_top_margin">

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:56"
            android:textColor="@color/artist_name_text_color"
            android:textSize="@dimen/artist_name_text_size"/>

        <ImageView
            android:id="@+id/imageDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_download_24"/>
    </LinearLayout>

</LinearLayout>